<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_margin_layout"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/button_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/history_details_type"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/rounded_mixed_garbage_button"
            android:textColor="@color/white"
            android:padding="0dp"
            android:layout_marginStart="@dimen/padding_margin_layout"
            android:layout_marginEnd="@dimen/padding_margin_layout"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/button_linear_layout"
        android:layout_marginEnd="@dimen/padding_margin_layout">

        <TextView
            android:id="@+id/history_details_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/history_details_vehicle_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/secondary_text_size"/>

        <TextView
            android:id="@+id/history_details_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/secondary_text_size"/>

    </LinearLayout>

</RelativeLayout>
