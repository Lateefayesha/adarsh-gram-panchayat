<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dim_200_dp"
    android:layout_height="@dimen/dim_200_dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="@dimen/dim_120_dp"
        android:layout_height="@dimen/dim_120_dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="dropping_loader.json"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/loading_txt"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:maxLines="2"/>

</LinearLayout>
