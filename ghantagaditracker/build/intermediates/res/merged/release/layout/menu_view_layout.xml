<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dim_5_dp"
    app:cardElevation="@dimen/dim_3_dp"
    android:layout_marginStart="@dimen/dim_10_dp"
    android:layout_marginEnd="@dimen/dim_10_dp">

    <LinearLayout
        android:layout_margin="@dimen/dim_10_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/game_icon_image"
            android:layout_width="@dimen/dim_60_dp"
            android:layout_height="@dimen/dim_60_dp"
            android:layout_weight="0.0"
            android:src="@drawable/ic_launcher_background" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/game_info_btn"
                android:layout_width="@dimen/back_btn_size"
                android:layout_height="@dimen/back_btn_size"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/dim_5_dp"
                android:src="@drawable/ic_info"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="recycle"
                android:textSize="@dimen/dim_14_sp"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>