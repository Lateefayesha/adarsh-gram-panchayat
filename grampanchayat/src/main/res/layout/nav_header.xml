<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_image_height"
    android:background="@drawable/navigation_title_image"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp">

        <com.mithsoft.lib.componants.CircleImageView
            android:id="@+id/navigationUserImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/unknown_person" />

        <TextView
            android:id="@+id/initialWordNavTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/primery_text_size"
            android:textStyle="bold" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/navigationUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/primery_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/navigationUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/secondary_text_size" />
    </LinearLayout>


</LinearLayout>