<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        style="@style/MyCardView"
        app:cardBackgroundColor="@color/card_view_background_color"
        app:cardCornerRadius="@dimen/cardview_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/upcoming_adp_Image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/upcoming_adp_txt_event_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_margin_layout"
                    android:padding="@dimen/padding_margin_layout"
                    android:layout_weight="30"
                    android:background="@drawable/event_date_background"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/upcoming_adp_txt_event_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_margin_layout"
                        android:padding="@dimen/padding_margin_layout"
                        android:textSize="@dimen/primery_text_size"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_primary"/>

                    <TextView
                        android:id="@+id/upcoming_adp_txt_event_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_margin_layout"
                        android:padding="@dimen/padding_margin_layout"
                        android:textSize="12sp"
                        android:textColor="@color/text_color_secondary"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/padding_margin_layout"
                android:background="@color/layout_background_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/upcoming_adp_lbl_event_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_margin_layout"
                    android:padding="@dimen/padding_margin_layout"
                    android:text="@string/event_address"
                    android:textSize="@dimen/secondary_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_primary"/>

                <TextView
                    android:id="@+id/upcoming_adp_txt_event_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_margin_layout"
                    android:padding="@dimen/padding_margin_layout"
                    android:textSize="@dimen/secondary_text_size"
                    android:textColor="@color/text_color_secondary"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/padding_margin_layout"
                android:background="@color/layout_background_color" />
            <TextView
                android:id="@+id/upcoming_adp_lbl_event_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_margin_layout"
                android:padding="@dimen/padding_margin_layout"
                android:text="@string/event_detail"
                android:textSize="@dimen/secondary_text_size"
                android:textStyle="bold"
                android:textColor="@color/text_color_primary" />

            <TextView
                android:id="@+id/upcoming_adp_txt_event_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_margin_layout"
                android:padding="@dimen/padding_margin_layout"
                android:textColor="@color/text_color_secondary"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>