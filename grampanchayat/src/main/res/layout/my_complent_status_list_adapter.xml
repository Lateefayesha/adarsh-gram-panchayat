<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/MyCardView"
        app:cardBackgroundColor="@color/card_view_background_color"
        app:cardCornerRadius="@dimen/cardview_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/my_complent_adp_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_layout"
                android:layout_marginLeft="@dimen/padding_margin_layout_double"
                android:layout_marginTop="@dimen/padding_margin_layout_double"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/primery_text_size"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/my_complent_adp_refrence_id_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_layout_double"
                android:textColor="@color/text_color_tertiary"
                android:textSize="@dimen/secondary_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_layout_double"
                android:layout_marginLeft="@dimen/padding_margin_layout_double"
                android:layout_marginRight="@dimen/padding_margin_layout_double"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_complent_adp_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_tertiary"
                    android:textSize="@dimen/secondary_text_size" />

                <TextView
                    android:id="@+id/my_complent_adp_status_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/primery_text_size"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>