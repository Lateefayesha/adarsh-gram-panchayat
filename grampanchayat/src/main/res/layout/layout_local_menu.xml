<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/menu_cv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="@dimen/padding_margin_layout"
        app:cardBackgroundColor="@color/card_view_background_color"
        app:cardCornerRadius="@dimen/padding_margin_layout"
        app:cardElevation="@dimen/cardview_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageMenuIV"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="visible"
                android:contentDescription="@string/app_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_20dp"/>

            <LinearLayout
                android:id="@+id/title_background"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/padding_margin_layout_double"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/padding_margin_layout_double">

                <TextView
                    android:id="@+id/menuNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/settings_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>