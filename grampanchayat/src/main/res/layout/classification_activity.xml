<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/classification_content_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/classification_data_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.riaylibrary.custom_component.AutoScrollViewPager
                android:id="@+id/viewPagerLarge"
                android:layout_width="match_parent"
                android:layout_height="160dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.riaylibrary.custom_component.AutoScrollViewPager
                    android:id="@+id/viewPagerMedium_1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="50" />

                <com.riaylibrary.custom_component.AutoScrollViewPager
                    android:id="@+id/viewPagerMedium_2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="50" />

            </LinearLayout>

            <com.riaylibrary.custom_component.AutoScrollViewPager
                android:id="@+id/viewPagerLarge_2"
                android:layout_width="match_parent"
                android:layout_height="160dp" />

            <com.riaylibrary.custom_component.AutoScrollViewPager
                android:id="@+id/viewPagerSmall"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </LinearLayout>

        <com.riaylibrary.custom_component.MyNoDataView
            android:id="@+id/classification_no_data_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>