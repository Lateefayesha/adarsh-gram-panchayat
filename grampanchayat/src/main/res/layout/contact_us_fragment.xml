<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background_color"
    android:padding="@dimen/padding_margin_layout">

    <!--<android.support.v4.widget.SwipeRefreshLayout-->
    <!--android:id="@+id/content_refresh"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <android.support.v7.widget.CardView
        android:id="@+id/topll"
        style="@style/MyCardView"
        app:cardBackgroundColor="@color/card_view_background_color"
        app:cardCornerRadius="@dimen/cardview_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_margin_layout"
                android:padding="@dimen/padding_margin_layout"
                android:text="@string/office_address"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/primery_text_size"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/layout_background_color" />

            <TextView
                android:id="@+id/office_address_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_margin_layout"
                android:padding="@dimen/padding_margin_layout"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/primery_text_size" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/content_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topll"
        android:divider="@color/layout_background_color" />

    <!--</android.support.v4.widget.SwipeRefreshLayout>-->

    <com.mithsoft.lib.componants.MyNoDataView
        android:id="@+id/no_data_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</RelativeLayout>