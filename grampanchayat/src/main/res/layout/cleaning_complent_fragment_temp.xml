<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_margin_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/yj_save_btn"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/MyCardView"
                app:cardBackgroundColor="@color/card_view_background_color"
                app:cardCornerRadius="@dimen/cardview_radius">


                <ImageView
                    android:id="@+id/cc_cature_img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"

                    android:src="@drawable/ic_camera" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding_margin_layout">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        style="@style/MyEditTextStyle"
                        android:hint="प्रभाग क्रमांक"
                        android:inputType="textCapWords" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        style="@style/MyEditTextStyle"
                        android:hint="स्थान"
                        android:inputType="textCapWords" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        style="@style/MyEditTextStyle"
                        android:hint="तक्रार माहिती"
                        android:inputType="textCapWords" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_margin_layout"
                    android:text="वैयक्तिक माहिती :"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/primery_text_size" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/tb_name_et"
                        style="@style/MyEditTextStyle"
                        android:hint="नाव"
                        android:inputType="textCapWords" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/tb_number_et"
                        style="@style/MyEditTextStyle"
                        android:hint="मोबाइल नंबर"
                        android:inputType="number" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/tb_prabhag_kramak_et"
                        style="@style/MyEditTextStyle"
                        android:hint="ईमेल"
                        android:inputType="textEmailAddress" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/tb_address_et"
                        style="@style/MyEditTextStyle"
                        android:hint="पत्ता"
                        android:inputType="textCapSentences" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/yj_save_btn"
        style="@style/MyButtonStyle"
        android:text="सबमिट करा" />

</RelativeLayout>