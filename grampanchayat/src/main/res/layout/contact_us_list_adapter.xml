<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        style="@style/MyCardView"
        app:cardBackgroundColor="@color/card_view_background_color"
        app:cardCornerRadius="@dimen/cardview_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/contact_adp_img"
                android:layout_width="@dimen/square_image_hight_width"
                android:layout_height="@dimen/square_image_hight_width"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/contact_adp_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_layout"
                    android:layout_marginTop="@dimen/padding_margin_layout"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/primery_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contact_adp_designation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_layout"
                    android:layout_marginTop="@dimen/padding_margin_layout"
                    android:maxLines="1"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/primery_text_size" />


                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="@color/layout_background_color" />-->


                <TextView
                    android:id="@+id/contact_adp_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_call"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/text_color_secondary"
                    android:textSize="@dimen/primery_text_size" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>