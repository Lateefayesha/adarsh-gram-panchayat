<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_margin_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/yb_save_btn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_margin_layout">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/yb_name_et"
                    style="@style/MyEditTextStyle"
                    android:hint="@string/name"
                    android:inputType="textCapWords" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/yb_number_et"
                    style="@style/MyEditTextStyle"
                    android:hint="@string/mobile_no"
                    android:inputType="number"
                    android:maxLength="10" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/yb_email_et"
                    style="@style/MyEditTextStyle"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/yb_address_et"
                    style="@style/MyEditTextStyle"
                    android:hint="@string/address"
                    android:inputType="textCapSentences" />
            </android.support.design.widget.TextInputLayout>

            <!--<android.support.design.widget.TextInputLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <!--<EditText-->
            <!--android:id="@+id/yb_business_desc_et"-->
            <!--style="@style/MyEditTextStyle"-->
            <!--android:hint="@string/business_desc"-->
            <!--android:inputType="textCapSentences"-->
            <!--android:maxLines="3" />-->

            <!--</android.support.design.widget.TextInputLayout>-->


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/yb_education_qulification_et"
                    style="@style/MyEditTextStyle"
                    android:hint="@string/education_qulification"
                    android:inputType="textCapSentences" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/yb_adhar_card_no_et"
                    style="@style/MyEditTextStyle"
                    android:hint="@string/aadhar_card_no"
                    android:inputType="number"
                    android:maxLength="12" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/yb_other_skill_et"
                    style="@style/MyEditTextStyle"
                    android:hint="@string/other_skill"
                    android:inputType="textCapSentences" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/yb_intrest_job_et"
                    style="@style/MyEditTextStyle"
                    android:hint="@string/interested_business"
                    android:inputType="textCapSentences" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/yb_available_resources_et"
                    style="@style/MyEditTextStyle"
                    android:hint="@string/available_resources"
                    android:inputType="textCapSentences" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/yb_about_yourself_et"
                    style="@style/MyEditTextStyle"
                    android:hint="@string/about_yourself"
                    android:inputType="textCapSentences" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/yb_help_required_et"
                    style="@style/MyEditTextStyle"
                    android:hint="@string/exact_nature_of_help_required"
                    android:inputType="textCapSentences" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_margin_layout"
                android:text="@string/capture_photo_of_resource"
                android:textSize="@dimen/primery_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_margin_layout"
                    android:layout_weight="5"
                    app:cardBackgroundColor="@color/card_view_background_color"
                    app:cardCornerRadius="@dimen/cardview_radius">

                    <ImageView
                        android:id="@+id/yb_cature_img1"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_camera" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_margin_layout"
                    android:layout_weight="5"
                    app:cardBackgroundColor="@color/card_view_background_color"
                    app:cardCornerRadius="@dimen/cardview_radius">

                    <ImageView
                        android:id="@+id/yb_cature_img2"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_camera" />

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_margin_layout"
                    android:layout_weight="5"
                    app:cardBackgroundColor="@color/card_view_background_color"
                    app:cardCornerRadius="@dimen/cardview_radius">

                    <ImageView
                        android:id="@+id/yb_cature_img3"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_camera" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_margin_layout"
                    android:layout_weight="5"
                    app:cardBackgroundColor="@color/card_view_background_color"
                    app:cardCornerRadius="@dimen/cardview_radius">

                    <ImageView
                        android:id="@+id/yb_cature_img4"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_camera" />

                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/yb_save_btn"
        style="@style/MyButtonStyle"
        android:text="@string/submit" />

</RelativeLayout>